{
  "name": "@stacks/rpc-client",
  "version": "0.9.0",
  "description": "Library for Stacks RPC operations",
  "license": "MIT",
  "author": "Hiro Systems PBC (https://hiro.so)",
  "homepage": "https://hiro.so/stacks-js",
  "prettier": "@stacks/prettier-config",
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:umd",
    "build:cjs": "tsc -b tsconfig.build.json",
    "build:esm": "tsc -p tsconfig.build.json --module ES6 --outDir ./dist/esm",
    "build:umd": "NODE_OPTIONS=--max-old-space-size=8192 webpack --config config/webpack.config.js",
    "clean": "rimraf dist && tsc -b tsconfig.build.json --clean",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:prettier:fix",
    "lint:eslint": "eslint \"{src,test}/**/*.{ts,tsx|!(d.ts)}\" -f unix",
    "lint:eslint:fix": "eslint \"{src,test}/**/*.{ts,tsx}\" -f unix --fix",
    "lint:prettier": "prettier --check \"{src,test}/**/*.{ts,tsx|!(d.ts)}\" --ignore-path .gitignore",
    "lint:prettier:fix": "prettier --write \"{src,test}/**/*.{ts,tsx|!(d.ts)}\" --ignore-path .gitignore",
    "pack": "npm pack",
    "prepare": "husky .github/.husky",
    "prepublishOnly": "npm run test && NODE_ENV=production npm run build",
    "start": "tsc -b tsconfig.build.json --watch --verbose",
    "test": "jest",
    "test:watch": "jest --watch --coverage=false",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "npm run typecheck -- --watch",
    "generate:schema": "openapi-typescript https://raw.githubusercontent.com/stacks-network/stacks-core/master/docs/rpc/openapi.yaml --output src/schema.ts"
  },
  "dependencies": {
    "@stacks/network": "^6.16.0",
    "openapi-fetch": "^0.12.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.11.1",
    "@stacks/eslint-config": "^2.0.0",
    "@stacks/prettier-config": "^0.0.10",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.13",
    "esbuild-loader": "^4.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.8.3",
    "fetch-mock": "^11.1.5",
    "husky": "^9.1.6",
    "inspectpack": "^4.7.1",
    "jest-fetch-mock": "^3.0.3",
    "lerna": "^8.1.8",
    "openapi-typescript": "^7.4.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0",
    "webpack": "^5.95.0",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^5.1.4"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "typings": "dist/index.d.ts",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "umd:main": "dist/umd/index.js",
  "unpkg": "dist/umd/index.js",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "blockstack",
    "network",
    "stacks",
    "rpc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hirosystems/stacks-rpc-client.git"
  },
  "bugs": {
    "url": "https://github.com/hirosystems/stacks-rpc-client/issues"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "src/schema.ts"
    ]
  }
}
